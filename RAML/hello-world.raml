#%RAML 1.0
title: hello world #Required Title
version: 1.0
baseUri: http://localhost:8081/v1
mediaType: application/json
/helloworld:
  get: #HTTP Method declaration
    responses:
      200:
        body:
          application/json: 
            type: |
              {
                "title": "Hello World Response",
                "type": "object",
                "properties":{
                  "message": {
                    "type": "string"
                  }
                }
              }
            example: | # Example how response looks
              {
              "Message" : "Hello World!!"
              }